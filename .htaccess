# .htaccess dla Warzywa Sędzinko
# Konfiguracja Apache

# Włącz RewriteEngine
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    
    # Przekieruj www na non-www (opcjonalne)
    # RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
    # RewriteRule ^(.*)$ http://%1/$1 [R=301,L]
    
    # Przekieruj HTTP na HTTPS (odkomentuj jeśli masz SSL)
    # RewriteCond %{HTTPS} off
    # RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
</IfModule>

# Bezpieczeństwo - ukryj pliki konfiguracyjne
<FilesMatch "^(database\.php|products\.json|database\.sql)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Zabezpieczenie katalogu config
<IfModule mod_rewrite.c>
    RewriteRule ^config/ - [F,L]
</IfModule>

# Ustaw domyślną stronę
DirectoryIndex index.php index.html

# Włącz kompresję GZIP
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Cache statycznych plików
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType application/json "access plus 0 seconds"
</IfModule>

# Ustaw charset UTF-8
AddDefaultCharset UTF-8

# Wyłącz listowanie katalogów
Options -Indexes

# Ochrona przed XSS
<IfModule mod_headers.c>
    Header set X-XSS-Protection "1; mode=block"
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
</IfModule>

# Limity PHP (dostosuj według potrzeb - odkomentuj jeśli serwer obsługuje php_value)
# php_value upload_max_filesize 10M
# php_value post_max_size 10M
# php_value max_execution_time 300
# php_value max_input_time 300

# Włącz wyświetlanie błędów (WYŁĄCZ na produkcji!)
# php_flag display_errors On
# php_value error_reporting E_ALL

# Wyłącz wyświetlanie błędów (dla produkcji)
# php_flag display_errors Off
# php_value error_reporting 0

# Custom error pages (opcjonalne)
# ErrorDocument 404 /404.html
# ErrorDocument 500 /500.html
